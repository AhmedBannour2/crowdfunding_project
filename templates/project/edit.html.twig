{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow-lg p-4">
            <h1 class="text-center mb-4">Modifier le Projet</h1>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                <div class="form-group mb-3">
                    {{ form_label(form.title, 'Titre du projet') }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.amount, 'Montant demandé (€)') }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.openingDate, 'Date d\'ouverture') }}
                    {{ form_widget(form.openingDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.closingDate, 'Date de clôture') }}
                    {{ form_widget(form.closingDate, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-warning w-100 mt-3">Modifier</button>
            {{ form_end(form) }}

            <a href="{{ path('app_project_index') }}" class="btn btn-secondary mt-3">Annuler</a>
        </div>
    </div>
{% endblock %}
