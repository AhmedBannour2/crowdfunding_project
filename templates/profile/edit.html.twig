{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg p-4">
                    <h1 class="text-center mb-4">Modifier mon Profil</h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.firstName, 'Pr√©nom') }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.lastName, 'Nom') }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.pseudonyme, 'Pseudonyme') }}
                            {{ form_widget(form.pseudonyme, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.country, 'Pays') }}
                            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100 mt-3">Enregistrer</button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_profile') }}" class="btn btn-secondary mt-3 w-100">Retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
